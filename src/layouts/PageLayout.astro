---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import ImageModal from '~/components/blog/ImageModal.astro';

import { headerData, footerData } from '~/data';

import type { MetaSEO } from '~/types';

export interface Props {
  meta?: MetaSEO;
  home?: boolean;
}

const { meta, home } = Astro.props;
---

<Layout {meta}>
  <slot name="header">
    <Header {...headerData} isSticky={home} showRssFeed showToggleTheme />
  </slot>
  <main>
    <ImageModal />
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
