---
// Supports weights 100-800
import '@fontsource-variable/jetbrains-mono';
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'JetBrains Mono Variable', sans-serif;
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(144, 0, 72);
    --aw-color-secondary: rgb(199, 155, 255);
    --aw-color-accent: rgb(0, 255, 183);
    --aw-color-text-page: rgb(25, 0, 46);
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-bg-page: rgb(236, 222, 255);

    --wb-dark-purple: #240041;
    --wb-darker-purple: #19002e;
    --wb-acid-green: #00ffb7;
    --wb-cherry: #900048;
    --wb-pink: #ff0e82;
    --wb-light-purple: #c79bff;
    --wb-grape: #752dce;
    --wb-pastel-purple: #e7d4ff;
    --wb-muted-purple: #ecdeff;
  }
</style>
