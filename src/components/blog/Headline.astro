---
const {
  title = await Astro.slots.render('default'),
  subtitle = await Astro.slots.render('subtitle'),
  left,
} = Astro.props;
---

<header class={`mx-auto mb-8 max-w-7xl ${(left && 'text-left') || 'text-center'} md:mb-16`}>
  <h1
    data-pagefind-body
    class="font-heading text-4xl font-bold leading-tight tracking-tight md:text-5xl"
    set:html={title}
  />
  {
    subtitle && (
      <div class="mx-auto mt-2 text-xl font-medium text-gray-500 dark:text-slate-400 md:mt-3" set:html={subtitle} />
    )
  }
</header>
