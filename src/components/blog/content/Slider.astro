---
import { Icon } from 'astro-icon';
---

<dialog id="imageDialog">
  <img class="drop-shadow-xl w-auto h-auto max-w-full max-h-full object-contain" src="" />
  <p class="text-[#00ffb7]">Some text</p>
  <button id="closeDialog">
    <Icon class="py-2 m-auto w-8 h-8" name="ep:close-bold" />
  </button>
</dialog>

<div class="slider-container overflow-auto relative rounded-xl text-[#c79bff] not-prose pt-2">
  <div
    class="slider-grid relative flex items-center w-full overflow-x-auto snap-x scroll-smooth"
    style="scrollbar-color: #00ffb7 #240041ee; scrollbar-width: thin"
  >
    <slot />
  </div>
  <div class="flex gap-3 justify-center py-2">
    <button
      class="preview bg-[#c79bff] text-[#19002e] drop-shadow-lg active:bg-[#00ffb7] active:text-[#900048] rounded-tr-lg rounded-br-lg rounded-tl-3xl rounded-bl-3xl"
    >
      <Icon class="py-2 mx-3 w-8 h-8" name="ep:arrow-left-bold" />
    </button>
    <button
      class="next bg-[#c79bff] text-[#19002e] drop-shadow-lg active:bg-[#00ffb7] active:text-[#900048] rounded-tl-lg rounded-bl-lg rounded-tr-3xl rounded-br-3xl"
    >
      <Icon class="py-2 mx-3 w-8 h-8 rotate-180" name="ep:arrow-left-bold" />
    </button>
  </div>
</div>
