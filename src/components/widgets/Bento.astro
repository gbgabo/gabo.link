---
import { Icon } from 'astro-icon';
const { blocks } = Astro.props;
---

<div class="grid grid-cols-3 gap-4 max-w-5xl px-4 m-auto mb-6">
  {
    blocks.map((block, i) => (
      <Fragment>
        <div
          class={`col-span-3 row-span-1 bg-white dark:bg-dark-purple rounded-lg shadow-lg hover:shadow-md transition border border-transparent dark:border-cherry p-4 ${
            block.span ?? 'md:col-span-1'
          }`}
        >
          <div class="mb-2 flex items-center gap-3">
            {block.icon && (
              <span class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-primary dark:bg-light-purple text-dark-purple">
                <Icon name={block.icon} class="w-5 h-5" />
              </span>
            )}
            <h2 class="inline text-xl font-bold">{block.title}</h2>
          </div>
          <ul>
            {block.items.map(({ type, value, href }) => {
              return (
                <li>
                  <p class="text-light-purple">
                    {type ? `${type}:` : ''}{' '}
                    <span class="text-darker-purple dark:text-acid-green bg-light-purple/30 dark:bg-darker-purple rounded-md inline-block mr-2 mb-2 py-0.5 px-2 font-medium">
                      {href ? (
                        <a href={href}>
                          {value}
                          <Icon name={'eva:diagonal-arrow-right-up-fill'} class="w-4 h-4 inline" />
                        </a>
                      ) : (
                        value
                      )}
                    </span>
                  </p>
                </li>
              );
            })}
          </ul>
        </div>
      </Fragment>
    ))
  }
</div>
